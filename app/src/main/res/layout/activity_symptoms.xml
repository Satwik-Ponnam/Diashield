<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4A5ABD"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="casual"
            android:text="Select and rate your symptoms"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Nausea -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="Nausea"
            android:textColor="#FFFFFF" />

        <RatingBar
            android:id="@+id/rating_nausea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:progressTint="#FFEA00"
            android:stepSize="1.0" />

        <!-- Headache -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="Headache"
            android:textColor="#FFFFFF" />

        <RatingBar
            android:id="@+id/rating_headache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:progressTint="#FFEA00"
            android:stepSize="1.0" />

        <!-- Diarrhea -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="Diarrhea"
            android:textColor="#FFFFFF" />

        <RatingBar
            android:id="@+id/rating_diarrhea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:progressTint="#FFEA00"
            android:stepSize="1.0" />

        <!-- Sore Throat -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="Sore Throat"
            android:textColor="#FFFFFF" />

        <RatingBar
            android:id="@+id/rating_sore_throat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:progressTint="#FFEA00"
            android:stepSize="1.0" />

        <!-- Fever -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="Fever"
            android:textColor="#FFFFFF" />

        <RatingBar
            android:id="@+id/rating_fever"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:progressTint="#FFEA00"
            android:stepSize="1.0" />

        <!-- Muscle Ache -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="Muscle Ache"
            android:textColor="#FFFFFF" />

        <RatingBar
            android:id="@+id/rating_muscle_ache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:progressTint="#FFEA00"
            android:stepSize="1.0" />

        <!-- Loss of Smell or Taste -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="Loss of Smell or Taste"
            android:textColor="#FFFFFF" />

        <RatingBar
            android:id="@+id/rating_loss_of_smell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:progressTint="#FFEA00"
            android:stepSize="1.0" />

        <!-- Cough -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="Cough"
            android:textColor="#FFFFFF" />

        <RatingBar
            android:id="@+id/rating_cough"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:progressTint="#FFEA00"
            android:stepSize="1.0" />

        <!-- Shortness of Breath -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="Shortness of Breath"
            android:textColor="#FFFFFF" />

        <RatingBar
            android:id="@+id/rating_shortness_of_breath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:progressTint="#FFEA00"
            android:stepSize="1.0" />

        <!-- Feeling Tired -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="Feeling Tired"
            android:textColor="#FFFFFF" />

        <RatingBar
            android:id="@+id/rating_feeling_tired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:progressTint="#FFEA00"
            android:stepSize="1.0" />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Submit"
            android:background="@drawable/curvy_button"
            android:textColor="@android:color/white"
            />


    </LinearLayout>
</ScrollView>
